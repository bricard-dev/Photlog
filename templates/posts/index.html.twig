{% extends 'base.html.twig' %}

{% block title 'Home' %}

{% block body %}
    <h1>Welcome to home page!</h1>

    {% for post in posts %}
        <article>
            <p>{{ post.title }}</p>
            <p>{{ post.content }}</p>
            <p>Created on {{ post.createdAt|date("m/d/Y") }}</p>
        </article>
    {% endfor %}
{% endblock %}
