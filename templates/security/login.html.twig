{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main role="main">
        {% if error %}
            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="container h-100 mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form method="post">
                        {# {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %} #}
                        <h1 class="font-weight-normal text-center mb-5">Sign in</h1>
                        <input type="email" value="{{ last_username }}" name="email" class="form-control mb-3" placeholder="Email" required autofocus>
                        <input type="password" name="password" class="form-control mb-3" placeholder="Password" required>
                
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                
                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html
                        #}
                
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                
                        <button class="btn btn-lg btn-block btn-success" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
            </div>
        </div>

    </main>
{% endblock %}
